#
# This is a all in one makefile for building SimpleGit for AmigaOS
#

.PHONY: all
all: sgit

.PHONY: sgit
sgit: libgit2
	# sgit
	mkdir -p build-amiga/
	cd build-amiga/ && cmake ../CMake -DAMIGA=1 -DCMAKE_C_COMPILER=ppc-amigaos-gcc -DLIBGIT2_BUILD_DIRECTORY_NAME=build-amiga
	cd build-amiga/ && $(MAKE)

.PHONY: libgit2
libgit2: libgit-repo
	# libgit2
	mkdir -p libgit2/build-amiga
	cd libgit2/build-amiga && cmake .. -DAMIGA=1 -DCMAKE_C_COMPILER=ppc-amigaos-gcc -DCMAKE_ASM_COMPILER=ppc-amigaos-gcc -DBUILD_CLAR=OFF -DBUILD_SHARED_LIBS=OFF
	cd libgit2/build-amiga && $(MAKE)

.PHONY: libgit-repo
libgit-repo:
	# Git repo
	git submodule init
	git submodule update

.PHONY: clean
clean: clean-sgit clean-libgit2

.PHONY: clean-libgit2
clean-libgit2:
	rm -Rf libgit2/build-amiga

.PHONY: clean-sgit
clean-sgit:
	rm -Rf build-amiga
